# ClipperTV Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# ============================================================================
# Authentication Configuration (Phase 1)
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# ============================================================================
# Email Configuration (Optional - for Phase 1.5)
# ============================================================================
EMAIL_PROVIDER=resend
EMAIL_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=ClipperTV <reports@clippertv.app>

# ============================================================================
# Application Configuration
# ============================================================================
APP_URL=http://localhost:8501
